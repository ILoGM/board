= form_for @item, url: @item.new_record? ? dashboard_items_path : dashboard_item_path(@item) do |f|
  = f.error_messages
  .field
    .label= f.label      :description
    .input= f.text_area  :description
  .field
    .label= label_tag      'tags', t(:tags)
    .input= text_field_tag 'tags', k(@item).tags
  .field
    .label= f.label      :contact_info
    .input= f.text_field :contact_info
  .field
    .label= f.label      :price
    .input= f.text_field(:price, :size => 5) + " USD"
  .field
    .label= f.label :state
    .select= select_tag :event, options_for_select(@item.state_events), {:include_blank => true}
  .field
    .input= f.submit
